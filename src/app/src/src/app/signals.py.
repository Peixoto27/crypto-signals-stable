# src/app/signals.py
import time
from src.config import COOLDOWN, CRYPTOS

last_signal_time = 0

def generate_signal():
    global last_signal_time
    current_time = time.time()
    
    if current_time - last_signal_time < COOLDOWN:
        return None
    
    last_signal_time = current_time
    return {
        "crypto": "BTC",
        "action": "BUY",
        "confidence": "75%",
        "timestamp": current_time
    }
